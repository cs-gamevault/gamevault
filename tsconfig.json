{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": false,
    "pretty": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["node"],
    "allowImportingTsExtensions": true
  },
  "exclude": ["./node_modules", "./server"],
  "include": ["./client"]
}
