{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": false,
    "sourceMap": true,
    "target": "ES6",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./node_modules", "./server"],
  "include": ["./client"]
}
